#Fenster erstellen 
from tkinter import Tk, Label, Button, StringVar, Entry, messagebox
fenster = Tk()
fenster.title("Chatbox")
fenster.configure(bg="white")
fenster.geometry("500x200")

#Button erstellen
exit_button =  Button(fenster, text="Exit", command=fenster.quit)


#Label erstellen
info_label = Label(fenster, text="Der Beenden Button schlie√üt das Fenster", fg="blue", bg ="black", font=("Arial", 12))

#Button und Label im Fenster platzieren
info_label.pack(pady=20)
exit_button.pack(pady=10)

fenster.mainloop()

